<main>
  <aside>
    <%= image_tag @user_info["avatar_url"], size: "200" %>
    <h1><%= @user_info["name"] %></h1>
    <h4></strong><%= @user_info["login"] %></h4>
    <p><strong>Bio: </strong><%= @user_info["bio"] %></p>
    <p><strong>Location: </strong><%= @user_info["location"] %></p>
    <p><strong>Email: </strong><%= @user_info["email"] %></p>
    <p><strong>Blog: </strong><%= @user_info["blog"] %></p>
  </aside>

  <section>
    <left>
    <p><strong>Number of Starred Repos: </strong><%= @starred_repo_count %></p>
    <p>
      <strong>Followers: </strong> <%= @followers.count %>    </p>
      <p>
        <% @followers.each do |follower| %>
        <%= link_to follower["login"], follower["html_url"] %>
        <% end %>
      </p>

    <p>
      <strong>Following: </strong><%= @followees.count %>      </p>
      <p>
      <% @followees.each do |followee| %>
      <%= link_to followee["login"], followee["html_url"] %>
      <% end %>
    </p>

    <p><strong>Recent Commits: </strong><%= @events.count %>      </p>
    <p>
      <% @events.each do |event| %>
        <li><%= event[:repo_name] %></li>
        <%= event[:message] %>
      <% end %>
    </p>
    <p><strong>Recent Activity from Followers: </strong></p>
    <p>
      <% @other_events.each do |event| %>
        <li><%= event[:repo_name] %></li>
        <%= event[:message] %>
      <% end %>
    </p>
    <p> <strong>Organizations: </strong></p>
</left>
<right>
    <p>
      <strong>Repos: </strong>
      <% @repos.each do |repo| %>
        <p><%= link_to repo["name"], repo["html_url"] %></p>
      <% end %>
    </p>
    </right>
  </section>
</main>
